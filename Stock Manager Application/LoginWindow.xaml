<Window x:Class="Stock_Manager_Application.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Stock_Manager_Application"
        mc:Ignorable="d"
        Loaded="loginWindow_Loaded"
        Closed="loginWindow_Closed"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Login" HorizontalAlignment="Left" Margin="378,216,0,0" VerticalAlignment="Top" Width="75" Click="LoginButton_Click"/>
        <TextBox HorizontalAlignment="Left" Name="usernameTextBox"  Height="23" Margin="361,83,0,0" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" Name="passwordTextBox"  Height="23" Margin="361,145,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
